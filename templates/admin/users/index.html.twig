{% extends 'admin/base.html.twig' %}

{% block title %}Administration des utilisateurs {% endblock %}

{% block body %}
<div class="container-fluid">
    <h1 class="my-5">Gestion des utilisateurs</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Avatar</th>
                    <th>Email</th>
                    <th>Nom</th>
                    <th>Prénom</th>
                    <th>Nombre de réservation</th>
                    <th>Actions</th>          
                </tr>
            </thead>
            <tbody>
                {% for user in pagination.data %}
                <tr>
                    <td>{{user.id}}</td>
                    <td>
                        <img src="{{user.picture}}" alt="avatar de {{user.fullName}}" class="avatar avatar-mini mr-2">
                    </td>
                    <td>{{user.email}}</td>
                    <td>{{user.firstName}}</td>
                    <td>{{user.lastName}}</td>
                    <td class="text-center">
                        <span class="badge badge-primary rounded">
                            {{user.bookings | length}}
                        </span>
                    </td>
                    <td>
                        <a href="{{ path('admin_user_edit', {'id': user.id}) }}" class="btn btn-info"><i class="fas fa-edit"></i></a>
                        <a href="{{ path('admin_user_delete', {'id': user.id}) }}" class="btn btn-danger"><i class="fas fa-trash"></i></a>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
        </table>
       {{ pagination.display() }}
</div>
{% endblock %}
