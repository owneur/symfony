{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}

<div class="container">
    <h1 class="my-5">Modification du profil</h1>

    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">
            <div class="alert alert-secondary">
                <h2 class="alert-heading">Informations générales</h2>
                <hr>
                {{ form_row(form.firstName) }}
                {{ form_row(form.lastName) }}
                {{ form_row(form.email) }}
                {{ form_row(form.picture) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="alert alert-secondary">
                <h2 class="alert-heading">Détails</h2>
                <hr>
                {{ form_row(form.introduction) }}
                {{ form_row(form.description) }}
                
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-primary"><i class="fas fa-check"></i>Enregistrer les modifications</button>
 
    {{ form_end(form) }}
</div>

{% endblock %}
