{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
<div class="container">
    <div class="my-5">
        <h1>Votre panier</h1>
    </div>
    {% if items | length > 0 %}
        <table class="table">
            <thead>
                <tr>
                    <th>Produit</th>
                    <th>Prix</th>
                    <th>Quantit√©</th>
                    <th>Total</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for item in items %}
                    <tr>
                        <td>{{ item.product.title }}</td>
                        <td>{{ item.product.price }}</td>
                        <td>
                            <a href="{{path('cart_remove',{'id': item.product.id})}}" type="button" role="button"> - </a>   
                            {{ item.quantity }}        
                             <a href="{{path('cart_add',{'id': item.product.id})}}" type="button" role="button">+</a>
                        </td>
                        <td>{{ item.product.price * item.quantity }}</td>
                        <td>
                            <a href="{{path('cart_clear',{'id': item.product.id})}}" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="3" class="text-right">Total : </td>
                    <td>{{total}}</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
    </div>   
    {% else %}
        <p>Votre panier est vide !</p>
    {% endif %}
    
{% endblock %}